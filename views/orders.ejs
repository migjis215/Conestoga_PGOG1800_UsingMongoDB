<%- include('_header'); -%> 

<h3>All Orders</h3>
<div class="table" style="overflow-x: auto;">
    <table>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>City</th>
            <th>Province</th>
            <th>Postal Code</th>
            <th>Product Name</th>
            <th>Price</th>
            <th>Qty</th>
            <th>Amount</th>
            <th>Shipping Cost</th>
            <th>Subtotal</th>
            <th>Tax Rate</th>
            <th>Tax</th>
            <th>Total</th>
        </tr>
        <%
        for (var order of orders) {
            %>
            <tr>
                <td rowspan="3">
                    <%= order.fullName %>
                </td>
                <td rowspan="3">
                    <%= order.email %>
                </td>
                <td rowspan="3">
                    <%= order.phone %>
                </td>
                <td rowspan="3">
                    <%= order.address %>
                </td>
                <td rowspan="3">
                    <%= order.city %>
                </td>
                <td rowspan="3">
                    <%= order.province %>
                </td>
                <td rowspan="3">
                    <%= order.postCode %>
                </td>
                <td>
                    <%= order.product1Name %>
                </td>
                <td>
                    $<%= order.product1Price %>
                </td>
                <td>
                    <%= order.product1Count %>
                </td>
                <td>
                    $<%= order.product1Cost.toFixed(2) %>
                </td>
                <td rowspan="3">
                    $<%= order.deliveryCost.toFixed(2) %>
                </td>
                <td rowspan="3">
                    $<%= order.subTotal.toFixed(2) %>
                </td>
                <td rowspan="3">
                    <%= order.taxRate * 100 %>%
                </td>
                <td rowspan="3">
                    $<%= order.taxes.toFixed(2) %>
                </td>
                <td rowspan="3">
                    $<%= order.total.toFixed(2) %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= order.product2Name %>
                </td>
                <td>
                    $<%= order.product2Price %>
                </td>
                <td>
                    <%= order.product2Count %>
                </td>
                <td>
                    $<%= order.product2Cost.toFixed(2) %>
                </td>
            </tr>
            <tr>
                <td>
                    <%= order.product3Name %>
                </td>
                <td>
                    $<%= order.product3Price %>
                </td>
                <td>
                    <%= order.product3Count %>
                </td>
                <td>
                    $<%= order.product3Cost.toFixed(2) %>
                </td>
            </tr>
            <%
        }
        %>
    </table>
</div>

<%- include('_footer'); -%>